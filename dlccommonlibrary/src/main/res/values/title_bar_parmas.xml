<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏通用-->
    <attr name="titleTextColor" format="color" />
    <attr name="titleText" format="string" />
    <attr name="leftDrawable" format="reference" />
    <attr name="rightDrawable" format="reference" />
    <attr name="leftText" format="string" />
    <attr name="rightText" format="string" />
    <attr name="showLine" format="boolean" />
    <attr name="lineColor" format="color" />
    <attr name="showLeftImage" format="boolean" />
    <attr name="showRightImage" format="boolean" />
    <attr name="showLeftText" format="boolean" />
    <attr name="showRightText" format="boolean" />
    <attr name="leftTextColor" format="color" />
    <attr name="rightTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="buttonTextSize" format="dimension" />

    <!--适配状态栏-->
    <attr name="fitStatusBar" format="boolean" />
    <!--定义状态栏参考线ID-->
    <item name="statusGuideline" type="id" />


    <declare-styleable name="TitleBar">
        <attr name="showLeftImage" />
        <attr name="showRightImage" />
        <attr name="showLeftText" />
        <attr name="showRightText" />

        <attr name="titleText" />
        <attr name="leftDrawable" />
        <attr name="rightDrawable" />
        <attr name="leftText" />
        <attr name="rightText" />

        <attr name="imageBg" format="reference" />
        <attr name="textBg" format="reference" />
        <attr name="showLine" />

        <attr name="lineColor" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="leftTextColor" />
        <attr name="rightTextColor" />

        <attr name="buttonTextSize" />
        <attr name="fitStatusBar" />

        <!--用来打底的布局，比如在最底层塞一个图片做背景-->
        <attr name="bottom_layout" format="reference" />
        
        <!--标题栏加粗-->
        <attr name="boldTitleText" format="boolean" />

        <!--按钮文本左右的边距-->
        <attr name="textButtonPadding" format="dimension" />
        <!--标题文本最大宽度-->
        <attr name="titleMaxWidth" format="dimension" />
        <!--底部线条高度-->
        <attr name="bottomLineHeight" format="dimension" />
    </declare-styleable>

    <!--一些默认值-->
    <dimen name="default_title_text_size">18dp</dimen>
    <dimen name="default_title_button_text_size">15dp</dimen>
    <dimen name="default_text_button_padding">8dp</dimen>
    <dimen name="default_title_max_width">250dp</dimen>
    <dimen name="default_bottom_line_height">1dp</dimen>

    <color name="default_title_text_color">@color/black</color>
    <color name="default_title_bottom_line_color">@color/line_color</color>


    <item name="title_bar_button_bg" type="drawable">@drawable/clickable_bg_item</item>
    <item name="title_bar_text_bg" type="drawable">@drawable/clickable_bg</item>

    <declare-styleable name="TopFrameLayout">
        <attr name="fitStatusBar" />
    </declare-styleable>

    <declare-styleable name="TopLinearLayout">
        <attr name="fitStatusBar" />
    </declare-styleable>

    <declare-styleable name="TopRelativeLayout">
        <attr name="fitStatusBar" />
    </declare-styleable>


</resources>